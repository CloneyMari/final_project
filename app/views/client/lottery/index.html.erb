<%= render 'layouts/banner' %>

<div class="container h-auto">
  <%= link_to 'All', lottery_index_path, class: "btn btn-secondary" %>
  <% Category.all.each do |category| %>
    <%= link_to category.name, lottery_index_path(category: category), class: "btn btn-secondary #{:active if params[:category] == category.id.to_s}" %>
  <% end %>

  <div class="row text-center text-lg-left">
    <% @items.each do |item| %>
      <div class="col-lg-3 col-md-4 col-xs-6">
        <div class="card my-4" style="width: 18rem;">
          <%= image_tag item.image.url, class: "card-img-top" if item.image.present? %>
          <div class="card-body">
            <p class="card-text"><%= item.name %></p>
          </div>

        </div>
      </div>
    <% end %>

  </div>
</div>
