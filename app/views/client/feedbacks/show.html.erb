<div class="d-flex justify-content-center align-items-center" style="height: 60vh; ">
  <div class="card text-center" style="width: 50%; border-color: #2c2c2c">
    <div class="card-body" style="background-color: #2c2c2c;">

      <%= form_with model: @winner, url: prize_feedback_path(@winner), method: :patch, data: { turbo: false } do |form| %>
        <% if @winner.errors.any? %>
          <ul>
            <% @winner.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="mb-3">
          <%= form.file_field :picture, class: "form-control" %>
        </div>
        <div class="mb-5">
          <%= form.label :comment %>
          <%= form.text_area :comment, class: 'form-control' %>
        </div>
        <div>
          <%= form.submit "Share", class: "btn btn-secondary w-100" %>
        </div>
      <% end %>
    </div>
  </div>
</div>